<%include ../partials/header%>
<div class="maincontainer">
    <br>
    <h1>Edit Post</h1>
    <br>
    <form action="/blogs/<%=blog.id%>/?_method=PUT" method="POST">
      <div class="form-group">
        <label>Blog Title</label>
        <input type="text" class="form-control" name="blog[title]" value="<%=blog.title%>">
      </div>
      <div class="form-group">
        <labe>Blog Body</label>
        <input type="text" class="form-control" name="blog[body]" value="<%=blog.body%>">
      </div>
      <div class="form-group">
        <label>Image</label>
        <input type="text" class="form-control" name="blog[img]" value="<%=blog.img%>" >
      </div>
      <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>
<%include ../partials/footer%>